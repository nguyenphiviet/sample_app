<h1><%= t(".listing_users") %></h1>

<table>
  <thead>
    <tr>
      <th><%= t(".name") %></th>
      <th><%= t(".email") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td><%= link_to t(".show"), user %></td>
    <td><%= link_to t(".edit"), edit_user_path(user) %></td>
    <td><%= link_to t(".destroy"), user, method: :delete,
                                     data: { confirm: t(".confirm") } %></td>
  </tr>
<% end %>
</table>

<br>

<%= link_to t(".new_user"), new_user_path %>
